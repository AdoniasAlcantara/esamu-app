<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".presentation.firstaid.FirstAidActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/firstAidPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/firstAidButtonPrevious"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        android:padding="5dp"
        app:fb_focusColor="#313131"
        app:fb_ghost="true"
        app:fb_iconResource="@drawable/ic_previous"
        app:fb_radius="64dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/firstAidButtonForward"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:padding="5dp"
        app:fb_focusColor="#313131"
        app:fb_ghost="true"
        app:fb_iconResource="@drawable/ic_forward"
        app:fb_radius="64dp" />

    <com.rd.PageIndicatorView
        android:id="@+id/pageIndicatorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="24dp"
        app:piv_animationType="swap"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@color/colorAccent"
        app:piv_unselectedColor="@color/colorPrimary"
        app:piv_viewPager="@id/firstAidPager" />

</RelativeLayout>